<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.panta.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.panta.android.MainPanta"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.panta.android.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="co.panta.android.MainPanta"
            android:theme="@android:style/Theme.Holo.Light" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.panta.android.MainPanta" />
        </activity>
        <activity
            android:name="co.panta.android.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@android:style/Theme.Holo.Light"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.panta.android.MainPanta" />
        </activity>
        <activity
            android:name="co.panta.android.DetalleViajeActivity"
            android:label="@string/title_activity_detalle_viaje"
            android:parentActivityName="co.panta.android.MainPanta" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.panta.android.MainPanta" />
        </activity>
    </application>

</manifest>
